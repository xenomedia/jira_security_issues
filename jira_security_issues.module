    'weight' => 50,
  );
  return $items;
}


/**
 * Implements hook_cron().
 */
function jira_security_issues_cron() {
  module_load_include('inc','jira_security_issues','jira_security_issues.updates');
  $frequency = variable_get('jira_security_issues_check_frequency', 1);
  $interval = 60 * 60 * 24 * $frequency;
  if ((REQUEST_TIME - variable_get('jira_security_issues_check', 0)) > $interval) {
    // Check for new updates and add them to JIRA
    jira_security_issues_send_to_jira();
  }
}
