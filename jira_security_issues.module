  $items['admin/reports/jira_security_issues'] = array(
    'title' => 'JIRA Open Issues',
    'description' => 'Get a status report about open JIRA tasks',
    'page callback' => 'jira_security_issues_status',
    'access arguments' => array('administer site configuration'),
    'weight' => -50,
    'file' => 'jira_security_issues.report.inc',
  );
  $items['admin/reports/jira_security_issues/list'] = array(
    'title' => 'List',
    'access arguments' => array('administer site configuration'),
    'type' => MENU_DEFAULT_LOCAL_TASK,
  );
  $items['admin/reports/jira_security_issues/settings'] = array(
    'title' => 'Settings',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('jira_security_issues_settings'),
    'access arguments' => array('administer site configuration'),
    'file' => 'jira_security_issues.settings.inc',
